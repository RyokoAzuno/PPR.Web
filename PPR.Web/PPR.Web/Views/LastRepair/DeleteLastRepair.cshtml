@model PPR.Web.Models.LastRepairViewModel

@{
    ViewBag.Title = "Удалить запись о последнем ремонте";
}

<h2>Удаление записи о последнем ремонте</h2>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <tr class="form-group">
                <td class="bg-primary"> @Html.LabelFor(m => m.RepairType, "Вид ремонта:")</td>
                <td>@Html.DisplayFor(m => m.RepairType)</td>
            </tr>
            <tr class="form-group">
                <td class="bg-primary">@Html.LabelFor(m => m.Technician, "Исполнитель:")</td>
                <td>@Html.DisplayFor(m => m.Technician)</td>
            </tr>
            <tr class="form-group">
                <td class="bg-primary">@Html.LabelFor(m => m.Date, "Дата:")</td>
                <td>@Html.DisplayFor(m => m.Date)</td>
            </tr>
            <tr class="form-group">
                <td class="bg-primary"> @Html.LabelFor(m => m.Equipment.InventoryNumber, "Инвентарный номер оборудования:")</td>
                <td>@Html.DisplayFor(m => m.Equipment.InventoryNumber)</td>
            </tr>
        </table>
    </div>
    <div class="col-md-8"></div>
</div>
<div>
    @Html.HiddenFor(m => m.EquipmentId)
    <p>
        @using (Html.BeginForm())
        {
            <input type="submit" value="Удалить" class="btn btn-danger btn-lg" />
        }
    </p>
</div>

