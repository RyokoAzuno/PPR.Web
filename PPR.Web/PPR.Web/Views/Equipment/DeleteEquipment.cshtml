@model PPR.Web.Models.EquipmentViewModel

@{
    ViewBag.Title = "Удалить оборудование";
}

<h2>Удаление оборудования @Model.InventoryNumber</h2>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.InventoryNumber, "Инвентарный номер:")</td>
                <td>
                    @Html.DisplayFor(model => model.InventoryNumber)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.Name, "Наименование:")</td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.Model, "Модель:")</td>
                <td>
                    @Html.DisplayFor(model => model.Model)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.NumberOfEngines, "Кол-во двигателей:")</td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfEngines)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.Power, "Мощность:")</td>
                <td>
                    @Html.DisplayFor(model => model.Power)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.URC, "ЕРС:")</td>
                <td>
                    @Html.DisplayFor(model => model.URC)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.Notes, "Примечания:")</td>
                <td>
                    @Html.DisplayFor(model => model.Notes)
                </td>
            </tr>
        </table>
    </div>
</div>
<div>
    @using (Html.BeginForm())
    {
        <input type="submit" value="Удалить" class="btn btn-danger btn-lg" />
    }
</div>