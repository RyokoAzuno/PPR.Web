@model PPR.Web.Models.PageViewModel<PPR.Web.Models.EquipmentViewModel>
@using PPR.Web.HtmlHelpers

@{
    ViewBag.Title = "Оборудование";
}

<h2>Информация по оборудованию</h2>

<table class="table table-striped table-hover">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().InventoryNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().NumberOfEngines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Power)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().URC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Notes)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.Items)
    {
        <tr class="bg-info">
            <td>
                @Html.DisplayFor(modelItem => item.InventoryNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfEngines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Power)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <p>@Html.ActionLink("Редактировать", "EditEquipment", "Equipment", new { id = item.Id }, new { @class = "btn btn-success" })</p>
            </td>
            <td>
                <p>@Html.ActionLink("Удалить", "DeleteEquipment", "Equipment", new { id = item.Id }, new { @class = "btn btn-danger" })</p>
            </td>
        </tr>
    }
</table>
<div class="btn-group">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Equipments", new { page = x }), "btn btn-default")
</div>
<br /><br />
<div>
    @*<div><p><a href="/Equipment/CreateEquipment/" class="btn btn-info btn-lg">Создать оборудование</a></p></div>*@
    <div><p>@Html.ActionLink("Создать оборудование", "CreateEquipment", "Equipment", new { @class = "btn btn-info btn-lg" })</p></div>

</div>

