@model PPR.Web.Models.EquipmentViewModel

@{
    ViewBag.Title = "Добавить новое оборудование";
}

<h2>Новое оборудование</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(m => m.InventoryNumber, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.EditorFor(m => m.InventoryNumber, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    @Html.LabelFor(m => m.Model, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.EditorFor(m => m.Model, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    @Html.LabelFor(m => m.NumberOfEngines, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.EditorFor(m => m.NumberOfEngines, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    @Html.LabelFor(m => m.Power, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.EditorFor(m => m.Power, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    @Html.LabelFor(m => m.URC, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.EditorFor(m => m.URC, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    @Html.LabelFor(m => m.Notes, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @rows = "3" })
    <br />
    @Html.LabelFor(m => m.Department.Code, htmlAttributes: new { @class = "control-label" })
    <br />
    @Html.DropDownList("DepartmentId", ViewBag.Departments as SelectList, new { @class = "btn btn-default dropdown-toggle" })
    <br /><br />
    <input type="submit" value="Добавить" class="btn btn-info btn-lg" />
}
