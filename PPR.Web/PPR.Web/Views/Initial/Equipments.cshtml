@model IEnumerable<PPR.Web.Models.EquipmentViewModel>

@{
    ViewBag.Title = "Оборудование";
}

<h2>Оборудование</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfEngines)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Power)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InventoryNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfEngines)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Power)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            <p>@Html.ActionLink("Редактировать", "EditDepartment", "Initial", new { id = item.Id }, new { @class = "btn btn-success" })</p>
        </td>
        <td>
            <p>@Html.ActionLink("Удалить", "DeleteDepartment", "Initial", new { id = item.Id }, new { @class = "btn btn-danger" })</p>
        </td>
    </tr>
    }
</table>
<div>
    <div><p><a href="/Initial/CreateDepartment/" class="btn btn-info">Создать цех</a></p></div>
</div>

