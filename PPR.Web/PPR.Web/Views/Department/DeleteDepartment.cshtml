@model PPR.Web.Models.DepartmentViewModel

@{
    ViewBag.Title = "Удалить цех";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удаление цеха @Model.Code</h2>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.Code, "Код цеха:")</td>
                <td>
                    @Html.DisplayFor(model => model.Code)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.Name, "Название цеха:")</td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td class="bg-primary">@Html.LabelFor(m => m.NumberOfBrigades, "Кол-во бригад:")</td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfBrigades)
                </td>
            </tr>
        </table>
    </div>
</div>
<div>
    @using (Html.BeginForm())
    {
        <input type="submit" value="Удалить" class="btn btn-danger btn-lg" />
    }
</div>