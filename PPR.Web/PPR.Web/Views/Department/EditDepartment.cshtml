@model PPR.Web.Models.DepartmentViewModel
@{
    ViewBag.Title = "Редактировать цех";
}

<h2>Цех @Model.Code</h2>
@using (Html.BeginForm("EditDepartment", "Department", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Code, "Код цеха:", htmlAttributes: new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control" } })
        </p>
        <p>
            @Html.LabelFor(m => m.Name, "Название цеха:", htmlAttributes: new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
        </p>
        <p>
            @Html.LabelFor(m => m.NumberOfBrigades, "Кол-во бригад:", htmlAttributes: new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.NumberOfBrigades, new { htmlAttributes = new { @class = "form-control" } })
        </p>
        <p><input type="submit" value="Отправить" class="btn btn-success btn-lg" /></p>
    </fieldset>
}
