@*@model IEnumerable<PPR.Web.Models.BrigadeViewModel>*@
@model PPR.Web.Models.PageViewModel<PPR.Web.Models.BrigadeViewModel>
@using PPR.Web.HtmlHelpers

@{
    ViewBag.Title = "Бригады";
}

<h2>Информация по бригадам</h2>

<table class="table table-condensed table-striped table-hover">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().NumberOfPeople)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().BrigadeChiefName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Department.Code)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.Items)
    {
        <tr class="bg-info">
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrigadeChiefName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Code)
            </td>
            <td>
                @*<p><a href="/Home/EditBrigade/@item.Code" class="btn btn-success">Редактировать</a></p>*@
                @Html.ActionLink("Редактировать", "EditBrigade", "Brigade", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("Удалить", "DeleteBrigade", "Brigade", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
<div class="btn-group">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Brigades", new { page = x }), "btn btn-default")
</div>
<br /><br />
<div>
    @*<div><p><a href="/Brigade/CreateBrigade/" class="btn btn-info btn-lg">Создать бригаду</a></p></div>*@
    <div><p>@Html.ActionLink("Создать бригаду", "CreateBrigade", "Brigade", new { @class = "btn btn-info btn-lg" })</p></div>
</div>