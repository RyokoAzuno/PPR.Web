@model PPR.Web.Models.BrigadeViewModel

@{
    ViewBag.Title = "Удалить Бригаду";
}

<h2>Удаление бригады @Model.Code</h2>
<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-bordered">
            <tr class="form-group">
                <td class="bg-primary">@Html.LabelFor(m => m.Code, "Код бригады:")</td>
                <td>@Html.DisplayFor(m => m.Code)</td>
            </tr>
            <tr class="form-group">
                <td class="bg-primary">@Html.LabelFor(m => m.NumberOfPeople, "Кол-во человек:")</td>
                <td>@Html.DisplayFor(m => m.NumberOfPeople)</td>
            </tr>
            <tr class="form-group">
                <td class="bg-primary">@Html.LabelFor(m => m.BrigadeChiefName, "Бригадир:")</td>
                <td>@Html.DisplayFor(m => m.BrigadeChiefName)</td>
            </tr>
            <tr class="form-group">
                <td class="bg-primary"> @Html.LabelFor(m => m.Department.Code, "Код цеха:")</td>
                <td>@Html.DisplayFor(m => m.Department.Code)</td>
            </tr>
        </table>
    </div>
    <div class="col-md-8"></div>
</div>
<div>
    @Html.HiddenFor(m => m.DepartmentId)
    <p>
        @using (Html.BeginForm())
        {
            <input type="submit" value="Удалить" class="btn btn-danger btn-lg" />
        }
    </p>
</div>


