@model PPR.Web.Models.BrigadeViewModel

@{
    ViewBag.Title = "Редактировать бригаду";
}

<h2>Редактировать Бригаду № @Model.Code</h2>
@using (Html.BeginForm("EditBrigade", "Brigade", FormMethod.Post))
{
<fieldset>
    <p>
        @Html.LabelFor(m => m.Code, "Код бригады:", htmlAttributes: new { @class = "control-label" })
        <br />
        @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control" } })
    </p>
    <p>
        @Html.LabelFor(m => m.NumberOfPeople, "Кол-во человек:", htmlAttributes: new { @class = "control-label" })
        <br />
        @Html.EditorFor(m => m.NumberOfPeople, new { htmlAttributes = new { @class = "form-control" } })
    </p>
    <p>
        @Html.LabelFor(m => m.BrigadeChiefName, "Бригадир:", htmlAttributes: new { @class = "control-label" })
        <br />
        @Html.EditorFor(m => m.BrigadeChiefName, new { htmlAttributes = new { @class = "form-control" } })
    </p>
    @*<p>
        @Html.LabelFor(m => m.Department.Code, "Код цеха:")
        <br />
        @Html.EditorFor(m => m.Department.Code)
    </p>*@
    @Html.HiddenFor(m => m.DepartmentId)
    <p><input type="submit" value="Отправить" class="btn btn-success btn-lg" /></p>
</fieldset>
}
