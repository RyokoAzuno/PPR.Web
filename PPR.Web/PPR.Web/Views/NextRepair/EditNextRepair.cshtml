@model PPR.Web.Models.NextRepairViewModel

@{
    ViewBag.Title = "Редактировать запись о следующем ремонте";
}

<h2>Редактировать запись о следующем ремонте оборудования @Model.Equipment.InventoryNumber</h2>
@using (Html.BeginForm("EditNextRepair", "NextRepair", FormMethod.Post))
{
    <fieldset>
        <p>
            @Html.LabelFor(m => m.RepairType, htmlAttributes: new { @class = "control-label" })
            <br />
            @Html.DropDownList("RepairType", ViewBag.Repairs as SelectList, htmlAttributes: new { @class = "btn btn-default dropdown-toggle" })
        </p>
        <p>
            @Html.LabelFor(m => m.Technician, htmlAttributes: new { @class = "control-label" })
            <br />
            @Html.DropDownList("Technician", ViewBag.Technicians as SelectList, htmlAttributes: new { @class = "btn btn-default dropdown-toggle" })
        </p>
        <p>
            @Html.LabelFor(m => m.Date, htmlAttributes: new { @class = "control-label" })
            <br />
            @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control" } })
        </p>
        @Html.HiddenFor(m => m.EquipmentId)
        <p><input type="submit" value="Отправить" class="btn btn-success btn-lg" /></p>
    </fieldset>
}
