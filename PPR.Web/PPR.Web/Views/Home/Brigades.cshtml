@model IEnumerable<PPR.Web.Models.BrigadeViewModel>

@{
    ViewBag.Title = "Бригады";
}

<h2>Бригады</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPeople)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrigadeChiefName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.Code)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPeople)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrigadeChiefName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Code)
        </td>
        <td>
            @*<p><a href="/Home/EditBrigade/@item.Code" class="btn btn-success">Редактировать</a></p>*@
            <p>@Html.ActionLink("Редактировать", "EditBrigade", "Home", new { id = item.Id, code = item.Code }, new { @class = "btn btn-success" })</p>

        </td>
        <td>
            <p>@Html.ActionLink("Удалить", "DeleteBrigade", "Home", new { id = item.Id, code = item.Code }, new { @class = "btn btn-danger" })</p>
        </td>
    </tr>
    }
</table>
<div>
    <div><p><a href="/Home/CreateBrigade/" class="btn btn-info">Создать бригаду</a></p></div>
</div>