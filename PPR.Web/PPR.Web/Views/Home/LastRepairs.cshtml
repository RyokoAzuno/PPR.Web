@model IEnumerable<PPR.Web.Models.LastRepairViewModel>

@{
    ViewBag.Title = "Последний ремонт";
}

<h2>Последний ремонт</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EquipmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepairType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Technician)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepairType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Technician)
            </td>
            <td>
                <p>@Html.ActionLink("Редактировать", "EditBrigade", "Home", new { id = item.Id }, new { @class = "btn btn-success" })</p>

            </td>
            <td>
                <p>@Html.ActionLink("Удалить", "DeleteBrigade", "Home", new { id = item.Id }, new { @class = "btn btn-danger" })</p>
            </td>
        </tr>
    }
</table>
<div>
    <div><p><a href="/Home/CreateBrigade/" class="btn btn-info">Создать бригаду</a></p></div>
</div>
